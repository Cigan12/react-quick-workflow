{
    "name": "reactquickworkflow",
    "displayName": "React quick workflow",
    "publisher": "ReqctQuickWorkflow",
    "repository": {
        "url": "https://github.com/Cigan12/react-quick-workflow"
    },
    "description": "",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/RQWLogo.png",
    "activationEvents": [
        "onCommand:reactquickworkflow.createReactComponent",
        "onCommand:reactquickworkflow.createReactNativeComponent",
        "onCommand:reactquickworkflow.createReactNativeScreen",
        "onCommand:reactquickworkflow.createReducer",
        "onCommand:reactquickworkflow.createSaga",
        "onCommand:reactquickworkflow.createApiUtil"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "React quick workflow",
            "properties": {
                "reactquickworkflow.styles": {
                    "type": "string",
                    "default": "null",
                    "enum": [
                        "cssmodules",
                        "styled-components",
                        "scss",
                        "css",
                        "null"
                    ],
                    "description": "Specifies styles type."
                },
                "reactquickworkflow.projectType": {
                    "type": "string",
                    "default": "react",
                    "enum": [
                        "react",
                        "react-native",
                        "null"
                    ],
                    "description": "Specifies project type."
                },
                "reactquickworkflow.componentPostfix": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "null",
                    "description": "Specifies react component prefix."
                }
            }
        },
        "commands": [
            {
                "command": "reactquickworkflow.createReactComponent",
                "title": "Create react component"
            },
            {
                "command": "reactquickworkflow.createReactNativeComponent",
                "title": "Create react native component"
            },
            {
                "command": "reactquickworkflow.createReactNativeScreen",
                "title": "Create react native screen"
            },
            {
                "command": "reactquickworkflow.createReducer",
                "title": "Create redux reducer"
            },
            {
                "command": "reactquickworkflow.createSaga",
                "title": "Create redux saga"
            },
            {
                "command": "reactquickworkflow.createApiUtil",
                "title": "Create api util"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "config.reactquickworkflow.projectType == react",
                    "command": "reactquickworkflow.createReactComponent",
                    "group": "z_commands"
                },
                {
                    "when": "config.reactquickworkflow.projectType == react-native",
                    "command": "reactquickworkflow.createReactNativeComponent",
                    "group": "z_commands"
                },
                {
                    "when": "config.reactquickworkflow.projectType == react-native",
                    "command": "reactquickworkflow.createReactNativeScreen",
                    "group": "z_commands"
                },
                {
                    "command": "reactquickworkflow.createReducer",
                    "group": "z_commands"
                },
                {
                    "command": "reactquickworkflow.createSaga",
                    "group": "z_commands"
                },
                {
                    "command": "reactquickworkflow.createApiUtil",
                    "group": "z_commands"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "yarn run test-compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.55.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0",
        "ts-loader": "^8.0.14",
        "webpack": "^5.19.0",
        "webpack-cli": "^4.4.0"
    }
}
